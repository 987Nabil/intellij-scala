<?xml version="1.0" encoding="iso-8859-1"?>

<idea-plugin>

    <actions>
        <action class="org.jetbrains.idea.devkit.scala.AttachIntellijSourcesAction" text="Attach IntelliJ Sources">
            <add-to-group group-id="MaintenanceGroup"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <externalSystemTaskNotificationListener
                implementation="org.jetbrains.idea.devkit.scala.IntellijSourcesAttachListener"/>
        <projectTemplatesFactory implementation="org.jetbrains.idea.devkit.scala.project.SbtIdeaPluginTemplatesFactory"/>

        <localInspection
                implementationClass="org.jetbrains.idea.devkit.scala.sbt.PluginNotRegisteredInspection"
                bundle="messages.ScalaDevkitBundle"
                language="sbt" enabledByDefault="true"
                shortName="PluginNotRegistered" key="inspection.plugin.not.registered.name"
                groupPath="Scala" groupKey="group.devkit.inspections"/>
    </extensions>

</idea-plugin>